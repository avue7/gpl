int i;
int ints[3];

on akey
{
  for (i = 0; i < 3; i += 1)
  {
    ints[i] = 2;
    print("ints[" + i + "] = " + ints[i]);
  }
}

on dkey
{
  for (i = 0; i < 3; i += 1)
  {
    ints[i] += 1;
    print("ints[" + i + "] = " + ints[i]);
  }
}

on skey
{
  for (i = 0; i < 3; i += 1)
  {
    ints[i] -= 1;
    print("ints[" + i + "] = " + ints[i]);
  }
}
